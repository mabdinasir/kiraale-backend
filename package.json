{
    "name": "kiraale-be",
    "description": "Kiraale Backend",
    "module": "src/main.ts",
    "main": "src/main.ts",
    "engines": {
        "node": "22.x"
    },
    "prisma": {
        "schema": "./prisma/schema"
    },
    "type": "module",
    "version": "1.0.0",
    "scripts": {
        "build": "bunx prisma generate --schema=./prisma/schema && bun run tsc && bun run resolve-tspaths",
        "start": "bun run pm2 start dist/main.js --name kiraale-be",
        "dev": "bun --watch src/main.ts",
        "type-check": "bun run tsc --noEmit --watch",
        "lint": "bun run eslint . --ignore-pattern 'dist'",
        "lint:fix": "bun run eslint . --fix --ignore-pattern 'dist'",
        "fmt": "bun run prettier --write .",
        "fmt:check": "bun run prettier --check ."
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/bun": "latest",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/lodash": "^4.17.20",
        "@types/multer": "^1.4.13",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.17",
        "@types/validator": "^13.15.2",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^9.1.2",
        "globals": "^15.15.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "prisma": "^6.13.0",
        "resolve-tspaths": "^0.8.23",
        "typescript-eslint": "^8.39.1"
    },
    "peerDependencies": {
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.864.0",
        "@aws-sdk/s3-request-presigner": "^3.864.0",
        "@prisma/client": "^6.13.0",
        "ai": "^4.3.19",
        "axios": "^1.11.0",
        "bcryptjs": "^3.0.2",
        "body-parser": "^1.20.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.6.1",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.1",
        "helmet": "^8.1.0",
        "install": "^0.13.0",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "multer": "^2.0.2",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.10.1",
        "ollama-ai-provider": "^1.2.0",
        "pm2": "^6.0.8",
        "tsconfig-paths": "^4.2.0",
        "validator": "^13.15.15",
        "zod": "^3.25.76"
    }
}
